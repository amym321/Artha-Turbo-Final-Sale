          "default": "left_right"
        },
        {
          "type": "color",
          "id": "gradient_1",
          "label": "First color",
          "default": "#000000"
        },
        {
          "type": "color",
          "id": "gradient_2",
          "label": "Second color",
          "default": "#000000"
        },
		{
          "type": "color",
          "id": "background-color",
          "label": "Background color"
        },
		{
          "type": "checkbox",
          "id": "enable-mobile-image",
          "label": "Enable mobile image",
		  "default": false
        },
		{
          "type": "image_picker",
          "id": "mobile-image",
          "label": "Image"
