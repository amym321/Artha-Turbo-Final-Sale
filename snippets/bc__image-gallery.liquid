
{% if type == 'block' %}
  {% assign page_landing_image_1 = block.settings.page_landing_image_1  %}
  {% assign mobile-image1 = block.settings.mobile-image1  %}
  {% assign mobile-image2 = block.settings.mobile-image2  %}
  {% assign mobile-image3 = block.settings.mobile-image3  %}

  {% assign page_landing_image_2 = block.settings.page_landing_image_2  %}
  {% assign page_landing_image_3 = block.settings.page_landing_image_3  %}
  {% comment %}Extended--------------------------------------------------{% endcomment %}
  {% assign master-class = block.settings.master-class %}
  {% assign background-image = block.settings.background-image %}
  {% assign background-color = block.settings.background-color %}
  {% assign repeat-background = block.settings.repeat-background %}
  {% assign background-size = block.settings.background-size %}
  {% assign index = block.id %}
{% else %}
  {% assign page_landing_image_1 = section.settings.page_landing_image_1  %}
  {% assign page_landing_image_2 = section.settings.page_landing_image_2  %}
  {% assign page_landing_image_3 = section.settings.page_landing_image_3  %}
  {% assign mobile-image1 = section.settings.mobile-image1  %}
  {% assign mobile-image2 = section.settings.mobile-image2  %}
  {% assign mobile-image3 = section.settings.mobile-image3  %}
  {% comment %}Extended--------------------------------------------------{% endcomment %}
  {% assign master-class = section.settings.master-class %}
  {% assign background-image = section.settings.background-image %}
  {% assign background-color = section.settings.background-color %}
  {% assign repeat-background = section.settings.repeat-background %}
  {% assign background-size = section.settings.background-size %}
  {% assign index = section.id %}
{% endif %}
{% include "bc__snippet-styles" %} 

<div class="{{ block.settings.display-mode }} {{ master-class }} {{ class__background }}">
  <div class="container content">
    <div class="sixteen columns">
      <div class="one-third column alpha thumbnail gallery-image-wrapper">
        {% if page_landing_image_1 %}
        <div class="gallery-cell">
          <a href="{{ page_landing_image_1 | img_url: '1520x' }}" class="lightbox {% if mobile-image1 %}mobile-hidden{% endif %}" rel="detail-gallery">
            <img src="{{ page_landing_image_1 | img_url: '760x' }}" alt="{{ page_landing_image_1.alt }}">
          </a>
          {% if mobile-image1 %}
          <a href="{{ mobile-image1 | img_url: '1520x' }}" class="lightbox mobile-only" rel="detail-gallery">
            <img src="{{ mobile-image1 | img_url: '760x' }}" alt="{{ mobile-image1.alt }}">
          </a>
          {% endif %}
        </div>
        {% else %}
        {{ 'image' | placeholder_svg_tag: 'placeholder-svg' }}
        {% endif %}
      </div>
      <div class="one-third column thumbnail gallery-image-wrapper">
        {% if page_landing_image_2 %}
        <div class="gallery-cell">
          <a href="{{ page_landing_image_2 | img_url: '1520x' }}" class="lightbox {% if mobile-image2 %}mobile-hidden{% endif %}" rel="detail-gallery">
            <img src="{{ page_landing_image_2 | img_url: '760x' }}" alt="{{ page_landing_image_2.alt }}">
          </a>
          {% if mobile-image2 %}
          <a href="{{ mobile-image2 | img_url: '1520x' }}" class="lightbox mobile-only" rel="detail-gallery">
            <img src="{{ mobile-image2 | img_url: '760x' }}" alt="{{ mobile-image2.alt }}">
          </a>
          {% endif %}          
        </div>
        {% else %}
        {{ 'image' | placeholder_svg_tag: 'placeholder-svg' }}
        {% endif %}
      </div>
      <div class="one-third column omega thumbnail gallery-image-wrapper">
        {% if page_landing_image_3 %}
        <div class="gallery-cell">
          <a href="{{ page_landing_image_3 | img_url: '1520x' }}" class="lightbox {% if mobile-image3 %}mobile-hidden{% endif %}" rel="detail-gallery">
            <img src="{{ page_landing_image_3 | img_url: '760x' }}" alt="{{ page_landing_image_3.alt }}">
          </a>
          {% if mobile-image3 %}
          <a href="{{ mobile-image3 | img_url: '1520x' }}" class="lightbox mobile-only" rel="detail-gallery">
            <img src="{{ mobile-image3 | img_url: '760x' }}" alt="{{ mobile-image3.alt }}">
          </a>
          {% endif %}          
        </div>
        {% else %}
        {{ 'image' | placeholder_svg_tag: 'placeholder-svg' }}
        {% endif %}
      </div>
    </div>
  </div>
</div>